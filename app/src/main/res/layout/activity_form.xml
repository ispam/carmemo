<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tech.destinum.carmemo.activities.Form">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Ingrese SÓLO las Fechas de Vencimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/tvHint"/>

        <TextView
            android:text="SOAT"
            android:textSize="20sp"
            android:layout_below="@id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tvSoat"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvSoat"
            android:layout_toRightOf="@+id/tvSoat"
            android:layout_toEndOf="@+id/tvSoat"
            android:id="@+id/switch2"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:hint="DD/MM/AAAA"
            android:ems="10"
            android:layout_below="@+id/tvSoat"
            android:layout_alignLeft="@+id/tvSoat"
            android:layout_alignStart="@+id/tvSoat"
            android:id="@+id/etSOAT"/>

        <TextView
            android:text="Revisión Técnico Mecánica"
            android:textSize="20sp"
            android:layout_below="@id/etSOAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tvRTM"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/tvRTM"
            android:layout_toRightOf="@+id/tvRTM"
            android:id="@+id/switchRTM"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:hint="DD/MM/AAAA"
            android:ems="10"
            android:layout_below="@+id/switchRTM"
            android:layout_alignLeft="@+id/tvSoat"
            android:layout_alignStart="@+id/tvSoat"
            android:id="@+id/etRTM"/>

        <TextView
            android:text="Seguro Todo Riesgo"
            android:textSize="20sp"
            android:layout_below="@id/etRTM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tvSTR"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/tvSTR"
            android:layout_toRightOf="@+id/tvSTR"
            android:id="@+id/switchSTR"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:hint="DD/MM/AAAA"
            android:ems="10"
            android:layout_below="@+id/switchSTR"
            android:layout_alignLeft="@+id/tvSoat"
            android:layout_alignStart="@+id/tvSoat"
            android:id="@+id/etSTR"/>

        <TextView
            android:text="Seguro Responsabilidad Civil"
            android:textSize="20sp"
            android:layout_below="@id/etSTR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tvSRC"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/tvSRC"
            android:layout_toRightOf="@+id/tvSRC"
            android:id="@+id/switchSRC"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:hint="DD/MM/AAAA"
            android:ems="10"
            android:layout_below="@+id/switchSRC"
            android:layout_alignLeft="@+id/tvSoat"
            android:layout_alignStart="@+id/tvSoat"
            android:id="@+id/etSRC"/>

        <TextView
            android:text="Tarjeta de Operación"
            android:textSize="20sp"
            android:layout_below="@id/etSRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tvTO"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/tvTO"
            android:layout_toRightOf="@+id/tvTO"
            android:id="@+id/switchTO"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:hint="DD/MM/AAAA"
            android:ems="10"
            android:layout_below="@+id/switchTO"
            android:layout_alignLeft="@+id/tvSoat"
            android:layout_alignStart="@+id/tvSoat"
            android:id="@+id/etTO"/>


    </RelativeLayout>

</ScrollView>
